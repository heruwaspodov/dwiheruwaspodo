rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if true;
      allow write: if false; // Only allow writes via Admin SDK (migrate.js) or authenticated users
    }
    
    // Allow writes to messages collection for Contact Form
    match /messages/{messageId} {
      allow create: if true;
    }
  }
}
